#!/bin/zsh

DOTFILES=$HOME/.dotfiles

echo "> Downloading dotfiles from git..."
if [ ! -d "$DOTFILES" ]
then
	git clone https://github.com/thesbros/dotfiles.git $DOTFILES
else
	cd $DOTFILES && git pull
fi
echo "> Symlinking files..."
ln -sf $DOTFILES/zsh/.zshrc ~/.zshrc

echo "> Downloading antigen..."
mkdir -p $DOTFILES/antigen
curl -L https://raw.githubusercontent.com/zsh-users/antigen/master/antigen.zsh > $DOTFILES/antigen/antigen.zsh

echo "> Downloading nvm..."
curl https://raw.githubusercontent.com/creationix/nvm/v0.24.1/install.sh | zsh > /dev/null
. $DOTFILES/zsh/nvm.zsh

echo "> Downloading io.js..."
nvm install iojs
nvm alias default iojs

echo "> Done! Restart your terminal and have fun."
